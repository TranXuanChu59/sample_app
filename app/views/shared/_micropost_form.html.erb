<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("compose_micropost") %>
  </div>
  <%= f.submit t("post"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png",
      data: {"max-size": Settings.picture.size, 
        "notification": t("maximum_size_picture")} %>
  </span>
<% end %>
